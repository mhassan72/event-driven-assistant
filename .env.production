# Production Environment Configuration for Integrated Credit System
# DO NOT COMMIT ACTUAL SECRETS - Use Firebase Functions Config or Secret Manager

# Environment
NODE_ENV=production
FIREBASE_PROJECT=sports-news-5fd0a

# API Configuration
API_VERSION=v1
API_BASE_URL=https://us-central1-sports-news-5fd0a.cloudfunctions.net/api

# Firebase Configuration
FIREBASE_DATABASE_URL=https://sports-news-5fd0a-default-rtdb.europe-west1.firebasedatabase.app/
FIRESTORE_DATABASE_ID=(default)

# AI Assistant Configuration
NEBIUS_API_BASE_URL=https://api.studio.nebius.com/v1
NEBIUS_API_KEY=${NEBIUS_API_KEY}  # Set via Firebase Functions Config
DEFAULT_TEXT_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct
DEFAULT_VISION_MODEL=google/gemma-3-27b-it
DEFAULT_IMAGE_MODEL=black-forest-labs/flux-schnell
DEFAULT_EMBEDDING_MODEL=BAAI/bge-en-icl

# Credit System Configuration
WELCOME_BONUS_CREDITS=1000
MIN_CREDIT_PURCHASE=21
CREDIT_TO_USD_RATE=0.024
LOW_BALANCE_THRESHOLD=50
CRITICAL_BALANCE_THRESHOLD=10

# Payment Configuration
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}  # Set via Firebase Functions Config
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}  # Set via Firebase Functions Config
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}  # Set via Firebase Functions Config

# Web3 Configuration
WEB3_ENABLED=true
SUPPORTED_CRYPTOCURRENCIES=BTC,ETH,USDC,USDT
BLOCKCHAIN_CONFIRMATION_BLOCKS=3

# Security Configuration
JWT_SECRET=${JWT_SECRET}  # Set via Firebase Functions Config
ENCRYPTION_KEY=${ENCRYPTION_KEY}  # Set via Firebase Functions Config
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_TRACING=true
HEALTH_CHECK_INTERVAL=30000

# Performance Configuration
MAX_CONCURRENT_OPERATIONS=50
OPERATION_TIMEOUT_MS=30000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30