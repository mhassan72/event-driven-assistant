{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "tsc --project config/tsconfig.json",
    "build:core": "tsc --project config/tsconfig.build.json",
    "build:watch": "tsc --project config/tsconfig.json --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "deploy:dev": "./scripts/deployment/deploy-development.sh",
    "deploy:staging": "./scripts/deployment/deploy-staging.sh",
    "deploy:prod": "./scripts/deployment/deploy-production.sh",
    "logs": "firebase functions:log",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --config config/jest.config.js --watch",
    "test:security": "jest --config config/jest.config.js test/security-rules.test.js",
    "test:integration": "jest --config config/jest.config.js test/integration/simple-integration.test.ts --verbose",
    "test:integration:full": "ts-node test/integration/run-integration-tests.ts",
    "test:integration:e2e": "jest --config config/jest.config.js test/integration/user-journey-e2e.test.ts --verbose --testTimeout=180000",
    "test:integration:performance": "jest --config config/jest.config.js test/integration/performance-load.test.ts --verbose --testTimeout=240000",
    "test:integration:security": "jest --config config/jest.config.js test/integration/security-compliance.test.ts --verbose --testTimeout=120000",
    "test:all": "npm run test && npm run test:integration",
    "test:deployment": "jest --config config/jest.config.js --selectProjects deployment-tests --verbose",
    "test:deployment:smoke": "jest --config config/jest.config.js test/deployment/smoke-tests.test.ts --verbose --testTimeout=300000",
    "test:deployment:monitoring": "jest --config config/jest.config.js test/deployment/monitoring-validation.test.ts --verbose --testTimeout=300000",
    "test:deployment:recovery": "jest --config config/jest.config.js test/deployment/disaster-recovery-validation.test.ts --verbose --testTimeout=300000",
    "test:deployment:security": "jest --config config/jest.config.js test/deployment/security-compliance-validation.test.ts --verbose --testTimeout=300000",
    "validate:deployment": "./scripts/validation/validate-deployment.sh",
    "emulators:start": "firebase emulators:start",
    "emulators:test": "firebase emulators:exec --only database 'npm run test:security'"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/secret-manager": "^6.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "helmet": "^8.1.0",
    "inversify": "^6.0.2",
    "p-retry": "^6.2.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.3",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "private": true
}
