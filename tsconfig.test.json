{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "supertest"],
    "noUnusedLocals": false,
    "noImplicitReturns": false
  },
  "include": [
    "src/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/__tests__/jest.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}